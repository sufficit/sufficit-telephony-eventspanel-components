<MudPaper Class="@GetCardChannelClass()" Elevation="0" Style="background-color: transparent;">
    <MudStack Row>
        <MudStack AlignItems="AlignItems.Center" Row Spacing="2">
            <MudIcon Size="Size.Small" Icon="@GetIcon()" Class="channel-icon" />
            <MudText Class="@($"{GetChannelTextClass()} channel-label")" Typo="Typo.caption">@GetDestinationInfo()</MudText>
        </MudStack>
        <MudSpacer />
        <MudStack>
            <CardChannelTimespan Channel="@Content"></CardChannelTimespan>
        </MudStack>
    </MudStack>
</MudPaper>