@inherits EventsPanelCardAbstract
<MudPaper Class="pa-1" Style="@GetCardStyle()">
    <MudGrid>
        <MudItem Class="d-flex flex-column justify-center">
            <MudTooltip Text="@PeerKey">
                <MudAvatar Image="@GetAvatarSrc()" Size="Size.Small" />
            </MudTooltip>
        </MudItem>
        <MudItem>
            <MudText Typo="Typo.body2">
                @Card.Label
                <MudTooltip Text="Canais Ativos"> :: @Card.Channels.Count</MudTooltip>
            </MudText>
        </MudItem>
        <MudItem Class="d-flex flex-column justify-center">
            @if (@Card.IsMonitored && @Content?.Address != null)
            {
                <MudTooltip Text="@Content?.Address">
                    <MudIcon Icon="@Icons.Material.Filled.Place" Size="Size.Small"></MudIcon>
                </MudTooltip>
            }
        </MudItem>
    </MudGrid>

    @if (Card.Channels.Any())
    {
        <MudDivider Class="my-1" />
        <MudGrid>
            <MudStack AlignItems="AlignItems.Center">
                <CardChannels Channels=@Card.Channels Kind="@EventsPanelCardKind.TRUNK"></CardChannels>
            </MudStack>
        </MudGrid>
    }
</MudPaper>
