@inherits EventsPanelView
@using Sufficit.Telephony.EventsPanel
<MudGrid Class="mt-1">
    <MudItem xs="12" sm="6" md="3" lg="2">
        <EventsPanelStatsCard
            IsStateCard
            Count="@Convert.ToInt32(@ViewRefreshComponent.RefreshRate)"
            Title="@Service.State?.ToString()"
            IconName="@Icons.Filled.Refresh"
            IsServiceTrying="@Service.IsTrying"
            OnClick="Refresh"
        >
        </EventsPanelStatsCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="3" lg="2">
        <EventsPanelStatsCard
            Count="@Panel.Cards.Peers.Count()"
            MaxButtons="@MaxButtons"
            Title="'Ramals | Extensões'"
            IconName="@Icons.Filled.Fax"
        >
        </EventsPanelStatsCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="3" lg="2">
        <EventsPanelStatsCard 
            Title="Troncos"
            Count="@Panel.Cards.Trunks.Count()"
            IconName="@Icons.Filled.Nature"
        >
        </EventsPanelStatsCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="3" lg="2">
        <EventsPanelStatsCard
            Title="Filas de espera"
            Count="@Panel.Cards.Queues.Count()"
            IconName="@Icons.Filled.Traffic"
        >
        </EventsPanelStatsCard>
    </MudItem>
    <MudItem xs="12" sm="12" md="12" lg="4">
        <EventsPanelStatsCard 
            IsTotal
            IconName="@Icons.Filled.Balance"
            Title="@(
                Panel.Cards.Count.ToString() + "Cd |" +
                Service.Peers.Count.ToString() + "Pr |" +
                Service.Queues.Count.ToString() + "Fl |" +
                Service.Channels.Count.ToString() + "Cn |"
            )"
        >
        </EventsPanelStatsCard>
    </MudItem>

    @if (ShowFilter)
    {
        <EventsPanelStatsFilter Filtering="@Filtering"></EventsPanelStatsFilter>
    }
</MudGrid>