@inherits EventsPanelCardAbstract<EventsPanelPeerCard>
<MudPaper Class="card" Style="@GetCardStyle()" data-kind="peer" data-state="@Content?.Status">
    <MudGrid Spacing="2">
        <MudItem Class="card-avatar">
            <MudTooltip Text="@PeerKey">
                <MudAvatar Size="Size.Small">
                    <MudImage Src="@GetAvatarSrc()"></MudImage>
                </MudAvatar>
            </MudTooltip>
        </MudItem>
        <MudItem Class="card-label">
            <MudTooltip Text="@Card.Label" Class="card-label-tooltip">
                <MudText Typo="Typo.body2" Class="card-label-text">@GetLabel()</MudText>
             </MudTooltip>
        </MudItem>
        <MudItem Class="d-flex justify-center align-center">
            @if (@Card.IsMonitored && @Content?.Address != null)
            {
                <MudTooltip Text="@Content?.Address">
                    <MudIcon Icon="@Icons.Material.Filled.Place" Size="Size.Small" Color="Color.Warning"></MudIcon>
                </MudTooltip>
            }
            <MudTooltip Text="@Convert.ToString(@Content?.Status)">
                <MudIcon Icon="@Icons.Material.Filled.Visibility" Size="Size.Small" Color="Color.Warning"></MudIcon>
            </MudTooltip>
        </MudItem>
    </MudGrid>
    
    @if (Card.Channels.Any())
    {
        <MudDivider Class="my-1"/>
        <MudGrid>
            <MudStack AlignItems="AlignItems.Center">
                <CardChannels Channels=@Card.Channels Kind="@EventsPanelCardKind.PEER"></CardChannels>
            </MudStack>
        </MudGrid>
    }
</MudPaper>
