<div class="col-xl-2 col-sm-6 mb-xl-0 mb-4">
    <div class="card">
        <div class="card-header p-3 pt-2 pb-1">
            <div class="icon icon-shape bg-gradient-dark shadow text-center border-radius-md mt-n3 position-absolute">
                <i class="material-icons opacity-10">filter_alt</i>
            </div>
            <div class="text-end pt-1">
                <p class="h4 font-weight-bolder mb-0">.</p>
            </div>
        </div>
        <hr class="dark horizontal my-0">
        <div class="card-footer p-3">
            @if (Filtering != null)
            {
                <TextInput CssClass="p-0" placeholder="Texto para filtrar ..." Value="@Filtering?.FilterText" OnValueChanged="@Filtering!.Filter"></TextInput>
            } 
            else
            {
                <TextInput CssClass="p-0" IsDisabled="true" placeholder="Texto para filtrar ..."></TextInput>
            }
        </div>
    </div>
</div>    