@if (Channels != null)
{
    <CascadingValue Value="@Kind">
        <CascadingValue Value="@ClientCode" Name="ClientCode">
            @foreach (var Channel in @GetChannelsToDisplay())
            {
                <CardChannelInfo Monitor="@Channel"></CardChannelInfo>
            }
        </CascadingValue>
    </CascadingValue>
}